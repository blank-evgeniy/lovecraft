---
import type { InferEntrySchema } from 'astro:content';
import Layout from './Layout.astro';
import Badge from '@ui/Badge.astro';
import Container from '@ui/Container.astro';
import Link from '@ui/Link.astro';

interface Props {
  frontmatter: InferEntrySchema<'bestiary'>;
}

const { frontmatter } = Astro.props;
const { title, description, image, tags } = frontmatter;
---

<Layout>
  <Container class="pt-12">
    <div class="flex items-center gap-8">
      <img
        src={image.url}
        class="pointer-events-none aspect-square w-[240px] max-w-[30vw] rounded-full object-cover"
        alt={image.alt}
      />
      <div>
        <h1 class="text-2xl font-semibold sm:text-3xl lg:text-4xl">{title}</h1>
        <p class="text-lg text-slate-200 sm:text-2xl">{description}</p>
      </div>
    </div>

    <div class="prose prose-invert prose-slate mt-8 w-full">
      <slot />
    </div>

    <div class="mt-8 flex flex-wrap gap-4">
      {
        tags.map((tag) => (
          <a href={`/bestiary/tag/${tag}`}>
            <Badge>{tag}</Badge>
          </a>
        ))
      }
    </div>

    <div class="flex justify-center">
      <Link
        href="/bestiary"
        icon="arrow-left-line"
        variant="secondary"
        class="mt-8 flex-row-reverse"
        text="Назад в бестиарий"
      />
    </div>
  </Container>
</Layout>
